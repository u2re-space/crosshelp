{
    "manifest_version": 3,
    "name": "Copy Math",
    "description": "Copy (almost) any math",
    "version": "1.0.0",
    "action": {
        "default_popup": "./src/$popup$/index.html"
    },
    "background": {
        "scripts": [
            "./src/$private$/KEY.ts",
            "./src/$runtime$/menu.ts",
            "./src/$runtime$/capture.ts",
            "./src/$runtime$/api.ts",
            "./src/$runtime$/index.ts",
            "./src/$utils$/core.ts",
            "./src/$utils$/state.ts",
            "./src/$offscreen$/copy.html",
            "./src/$offscreen$/copy.js"
        ],
        "service_worker": "./src/$runtime$/index.ts",
        "type": "module"
    },
    "icons": {
        "512": "assets/512x.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "background",
        "clipboardWrite",
        "clipboardRead",
        "contextMenus",
        "nativeMessaging",
        "tabCapture",
        "downloads",
        "offscreen"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals clipboard-write clipboard-read; script-src 'self' 'wasm-unsafe-eval' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval' 'wasm-eval' http://**/* https://**/* file://**/*; child-src 'self';"
    },
    "host_permissions": ["<all_urls>", "file://**/*", "file:///**/*"],
    "content_scripts": [{
        "type": "module",
        "matches": ["<all_urls>", "file:///**/*", "file://**/*"],
        "js": ["./src/$content$/index.ts"],
        "run_at": "document_start"
    }]
}
